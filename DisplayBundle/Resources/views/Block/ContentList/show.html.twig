<div class="{{ class }}" id="{{ id }}">
    {% for content in contents %}
        <div>
            <span class="{{ content.attributes.values.1.name }}">{{ content.attributes.values.1.value }}</span>
            <h2>{{ content.name }}</h2>
            <p>
                {{ content.attributes.values.4.value | truncate(70, true, '...') }}
            </p>

            {% if url is defined %}
                <a href="{{ url }}?contentId={{ content.contentId }}"></a>
            {% endif %}
        </div>
    {% endfor %}
</div>
