{% extends 'OpenOrchestraDisplayBundle:Block:layout.html.twig' %}

{% block content %}
    {% for content in contents %}
        {% if contentFromTemplate[content.id] is defined and contentFromTemplate[content.id] is not null %}
            {{ contentFromTemplate[content.id]|raw }}
        {% else %}
            <div>
                {% if contentNodeId is defined %}
                    <a href="{{ url(contentNodeId, {'contentId' : content.contentId} ) }}">
                        <h2>{{ content.name }}</h2>
                    </a>
                {% else %}
                    <h2>{{ content.name }}</h2>
                {% endif %}

            </div>
        {% endif %}
    {% endfor %}
    <script>
        require(['{{ asset('/bundles/openorchestradisplay/block/ContentList/blockLoader.phone.js') }}']);
    </script>
{% endblock %}
